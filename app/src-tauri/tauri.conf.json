{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "OpenFlow",
  "version": "0.1.0",
  "identifier": "com.openflow.openflow",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "bundle": {
    "active": false,
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ],
    "category": "Utility",
    "shortDescription": "OpenFlow local dictation",
    "longDescription": "OpenFlow is a local-first speech-to-text dictation assistant. Captures audio, transcribes on-device, and pastes polished text into active fields.",
    "linux": {}
  },
  "app": {
    "trayIcon": {
      "iconPath": "icons/tray-icon.png",
      "menuOnLeftClick": true
    },
    "windows": [
      {
        "title": "OpenFlow",
        "label": "main",
        "create": false,
        "decorations": true,
        "transparent": false,
        "center": true,
        "visible": true,
        "skipTaskbar": false,
        "maximized": false,
        "resizable": true,
        "width": 800,
        "height": 600
      },
      {
        "title": "",
        "label": "status-overlay",
        "url": "overlay.html",
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "resizable": false,
        "width": 560,
        "height": 180,
        "x": 0,
        "y": 0,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
